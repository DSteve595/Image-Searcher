<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:theme="@style/ImageSearch">

    <RadioButton
        android:id="@+id/service_grid_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="?attr/listPreferredItemPaddingLeft"
        android:layout_marginRight="8dp"
        android:layout_marginStart="?attr/listPreferredItemPaddingLeft" />

    <TextView
        android:id="@+id/service_grid_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/service_grid_selected"
        android:layout_toRightOf="@id/service_grid_selected"
        android:elegantTextHeight="true"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        tools:text="Google" />

    <LinearLayout
        android:id="@+id/service_grid_price_holder"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="?attr/listPreferredItemPaddingRight"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="?attr/listPreferredItemPaddingRight"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:theme="@style/ImageSearch.GoldButtonTheme">

        <TextView
            android:id="@+id/service_grid_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceButton"
            tools:text="$1.99" />

        <ImageButton
            android:id="@+id/service_grid_price_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_info"
            android:tint="@color/abc_primary_text_material_light" />
    </LinearLayout>
</RelativeLayout>